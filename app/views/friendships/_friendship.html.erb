<div class="row middle-xs center-xs">
	<div class="col-xs-12 col-md-3">
		<div class="box">
			<% if friendship.user_view.photos.attached?%>
				<%= circle_img(friendship.user_view.photos, 50)%>
			<% end %>
		</div>
	</div>
	<div class="col-xs-12 col-md-3">
		<div class="box">
			<p><%= friendship.user_view.username%></p>
		</div>
	</div>
	<div class="col-xs-12 col-md-6">
		<div class="box">
			<%= friendship.status_of_buttons(current_user) %>
		</div>
	</div>
</div>


